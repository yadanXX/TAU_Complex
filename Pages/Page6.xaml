                         Grid.Column="1" />
                <Canvas Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        Width="20"
                        Height="24"
                        VerticalAlignment="Top"
                        Grid.Row="2"
                        Grid.Column="1">
                    <TextBlock Style="{DynamicResource ResourceKey=canvasLeft}"
                               Text="T" />
                    <TextBlock Style="{DynamicResource ResourceKey=canvasBot}"
                               Text="2"
                               Canvas.Left="9"
                               Canvas.Top="11" />

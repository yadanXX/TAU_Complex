            </Grid>
            <Button Style="{DynamicResource ResourceKey=PlotButton}"
                    Grid.Row="1"
                    Click="Button_Click"
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="2" />
            <oxy:PlotView x:Name="plotView3"
                          Grid.Row="8"
                          Grid.ColumnSpan="2" />
        </Grid>

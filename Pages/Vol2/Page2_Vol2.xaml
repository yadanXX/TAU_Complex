                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Width="50" />
                    </StackPanel>
                    <StackPanel
                        x:Name="StackPanel_tk"
                        Orientation="Horizontal">
                        <Canvas
                            Margin="5,5,0,5"
                            HorizontalAlignment="Left"
                            Width="20"
                            Height="24"
                            VerticalAlignment="Top">
                            <TextBlock
                                Style="{StaticResource ResourceKey=canvasLeft}"
                                Text="t" />
                            <TextBlock
                                Style="{StaticResource ResourceKey=canvasBot}"
                                Text="k"

                            HorizontalAlignment="Left"
                            Width="20"
                            Height="24"
                            VerticalAlignment="Top">
                            <TextBlock
                                Style="{StaticResource ResourceKey=canvasLeft}"
                                Text="K" />
                            <TextBlock
                                Style="{StaticResource ResourceKey=canvasBot}"
                                Text="1"
                                Canvas.Left="9"
                                Canvas.Top="11" />
                        </Canvas>
                        <TextBox
                            x:Name="textBoxK1"
                            Margin="5,5,0,5"

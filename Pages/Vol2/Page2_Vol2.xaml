                            Margin="5,5,0,5"
                            FontSize="16"
                            Height="24"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Width="50" />
                    </StackPanel>
                    <StackPanel
                        x:Name="StackPanel_T1"
                        Orientation="Horizontal">
                        <Canvas
                            Margin="5,5,0,5"
                            HorizontalAlignment="Left"
                            Width="20"
                            Height="24"
                            VerticalAlignment="Top">
                            <TextBlock
                                Style="{StaticResource ResourceKey=canvasLeft}"
                                Text="T" />
                            <TextBlock
                                Style="{StaticResource ResourceKey=canvasBot}"
                                Text="1"
                                Canvas.Left="9"
